@model GranHouseSA.Models.Usuarios

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: #f0f2f5;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .login-container {
        max-width: 600px;
        margin: 5rem auto;
        padding: 2rem;
        background-color: #ffffff;
        border-radius: 12px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.05);
    }

    h1 {
        text-align: center;
        margin-bottom: 1.5rem;
        color: #0c193b;
    }

    .form-group label {
        font-weight: 600;
    }

    .form-control {
        max-width: 400px;
        border-radius: 8px;
        padding: 0.6rem;
    }

    .btn-primary {
        width: 100%;
        border-radius: 8px;
        padding: 0.6rem;
        font-weight: bold;
        background-color: #0c193b;
        border: none;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #1f2a50;
        }

    .alert {
        font-size: 0.95rem;
    }
</style>


<div class="login-container">
    <div class="row">
        <div class="col-sm-4">
        </div>
        <div class="col-sm-4">
            <form asp-action="Login" id="FormularioLogin">

                <h1 id="Centrar">Inicio de Sesión</h1>

                @*Solicitamos el email*@
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" placeholder="example@domain.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                @*Solicitamos el password*@
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <div class="input-group">
                        <input asp-for="Password" class="form-control" placeholder="******" id="txtPassword" />
                        <div class="input-group-append">
                            <button id="show_password" class="btn btn-primary" type="button" onclick="mostrarPassword()"> <span class="fa fa-eye-slash icon"></span> </button>
                        </div>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>


                @*Boton que ejecuta el post del formulario*@
                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary mt-3">Ingresar</button>
                    <button asp-action="CrearCuenta" type="submit" class="btn btn-primary mt-3">Crear Cuenta</button>
                </div>

                @if (TempData["Mensaje"] != null)
                {
                    <div class="alert alert-danger mt-3" role="alert" style="font-size:13px; margin:auto">
                        <strong>@TempData["Mensaje"]</strong>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
                    </div>
                }

                @if (TempData["MensajeCreado"] != null)
                {
                    <div class="alert alert-info alert-dismissible fade show mt-2" style="font-size:13px; margin:auto" role="alert">
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
                        <strong>@TempData["MensajeCreado"]</strong>
                    </div>
                }

            </form>
        </div>
        <div class="col-sm-4">
        </div>
    </div>
</div>
