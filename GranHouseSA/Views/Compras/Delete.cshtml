        <dd class="col-sm-10">
            $@Html.DisplayFor(model => model.MontoFinal)
        </dd>
        <dt class="col-sm-2">
            Monto final en colones
        </dt>
        <dd class="col-sm-10">
            ₡@montoFinalColones
        </dd>
