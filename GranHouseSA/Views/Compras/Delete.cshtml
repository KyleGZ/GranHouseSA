@model GranHouseSA.Models.Compras

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";

    GranHouseSA.Data.TipoCambioApi _tipoCambio = new GranHouseSA.Data.TipoCambioApi();
    var montoFinalColones = (Model.MontoFinal * _tipoCambio.extraerTipoCambio().venta).ToString("0.00");
}

<h1>Eliminar</h1>

<h3>¿Estás seguro que deseas hacer esto?</h3>
<hr />
<div>
