@model GranHouseSA.Models.Paquete

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .edit-container {
        max-width: 600px;
        margin: 5rem auto;
        padding: 2rem;
        background-color: #ffffff;
        border-radius: 12px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.05);
    }

    h1 {
        text-align: center;
        margin-bottom: 1.5rem;
        color: #0c193b;
    }

    .form-group label {
        font-weight: 600;
    }

    .form-control {
        max-width: 400px;
        border-radius: 8px;
        padding: 0.6rem;
    }

    .btn-primary {
        width: 100%;
        border-radius: 8px;
        padding: 0.6rem;
        font-weight: bold;
        background-color: #0c193b;
        border: none;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #1f2a50;
        }

    .alert {
        font-size: 0.95rem;
    }
</style>

<div class="edit-container">
    <div class="row">
        <div class="col-md-3">
        </div>
        <div class="col-md-6">
            <h4 class="CentrarColumnas">Información de los paquetes</h4>
            <hr />
            <form asp-action="Edit" class="form-container">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="NombrePaquete" class="control-label"></label>
                    <input asp-for="NombrePaquete" class="form-control" placeholder="Vacacional" />
                    <span asp-validation-for="NombrePaquete" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Costo" class="control-label"></label>
                    <input asp-for="Costo" class="form-control" type="number" placeholder="600" />
                    <span asp-validation-for="Costo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Prima" class="control-label"></label>
                    <input asp-for="Prima" class="form-control" type="number" step="0.01" min="0" max="100" placeholder="0.30" />
                    <span asp-validation-for="Prima" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Mensualidad" class="control-label"></label>
                    <input asp-for="Mensualidad" class="form-control" type="number" placeholder="24" />
                    <span asp-validation-for="Mensualidad" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <input type="submit" value="Modificar" class="btn btn-primary" /> 
                    <input asp-action="Index" type="submit" value="Volver" class="btn btn-primary" />
                </div>

                @if (TempData["ErrorPaquete"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show mt-2" style="font-size:13px; margin:auto" role="alert">
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
                        <strong>@TempData["ClienteError"]</strong>
                    </div>
                }

            </form>
        </div>
        <div class="col-md-3">
        </div>
    </div>
</div>