@model GranHouseSA.Models.Paquete

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .delete-container {
        max-width: 600px;
        margin: 5rem auto;
        padding: 2rem;
        background-color: #ffffff;
        border-radius: 12px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.05);
    }

    h1 {
        text-align: center;
        margin-bottom: 1.5rem;
        color: #0c193b;
    }

    .form-group label {
        font-weight: 600;
    }

    .form-control {
        max-width: 400px;
        border-radius: 8px;
        padding: 0.6rem;
    }

    .btn-primary {
        width: 100%;
        border-radius: 8px;
        padding: 0.6rem;
        font-weight: bold;
        background-color: #0c193b;
        border: none;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #1f2a50;
        }

    .alert {
        font-size: 0.95rem;
    }

    .titulo {
        text-align: center;
    }
</style>


<div class="delete-container container mt-5">
    <div class="card shadow p-4">
        <h1 class="text-center mb-3">Eliminar</h1>
        <h4 class="text-center mb-4">¿Estás seguro que deseas hacer esto?</h4>

        <h5 class="text-center text-secondary mb-4">Información del cliente</h5>

        <div class="row mb-2">
            <div class="col-sm-4 fw-bold text-end">@Html.DisplayNameFor(model => model.ID):</div>
            <div class="col-sm-8">@Html.DisplayFor(model => model.ID)</div>
        </div>
        <div class="row mb-2">
            <div class="col-sm-4 fw-bold text-end">@Html.DisplayNameFor(model => model.NombrePaquete):</div>
            <div class="col-sm-8">@Html.DisplayFor(model => model.NombrePaquete)</div>
        </div>
        <div class="row mb-2">
            <div class="col-sm-4 fw-bold text-end">@Html.DisplayNameFor(model => model.Costo):</div>
            <div class="col-sm-8">@Html.DisplayFor(model => model.Costo)</div>
        </div>
        <div class="row mb-2">
            <div class="col-sm-4 fw-bold text-end">@Html.DisplayNameFor(model => model.Prima):</div>
            <div class="col-sm-8">@Html.DisplayFor(model => model.Prima)</div>
        </div>
        <div class="row mb-4">
            <div class="col-sm-4 fw-bold text-end">@Html.DisplayNameFor(model => model.Mensualidad):</div>
            <div class="col-sm-8">@Html.DisplayFor(model => model.Mensualidad)</div>
        </div>

        <div class="text-center">
            <form asp-action="Delete" class="d-inline">
                <input type="submit" value="Eliminar" class="btn btn-danger me-2" />
            </form>
            <a asp-action="Index" class="btn btn-warning">Volver</a>
        </div>
    </div>
</div>

