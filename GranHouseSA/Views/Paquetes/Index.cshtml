@model IEnumerable<GranHouseSA.Models.Paquete>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    h1 {
        text-align: center;
        margin-top: 2rem;
        color: #0c193b;
    }

    .btn-create {
        display: inline-block;
        margin: 1rem 0;
        padding: 0.5rem 1rem;
        background-color: #007bff;
        color: white;
        border-radius: 6px;
        text-decoration: none;
        font-weight: bold;
        transition: background-color 0.2s ease-in-out;
    }

        .btn-create:hover {
            background-color: #0056b3;
        }

    table {
        margin: auto;
        width: 95%;
        background-color: white;
        border-radius: 8px;
        box-shadow: 0 0 15px rgba(0,0,0,0.1);
    }

    .table th, .table td {
        vertical-align: middle;
        text-align: center;
    }

    .action-buttons {
        display: flex;
        justify-content: center;
        gap: 0.5rem;
    }

        .action-buttons a {
            padding: 0.3rem 0.6rem;
            font-size: 0.85rem;
            border-radius: 5px;
            text-decoration: none;
            color: white;
        }

    .btn-edit {
        background-color: #ffc107;
    }

    .btn-details {
        background-color: #17a2b8;
    }

    .btn-delete {
        background-color: #dc3545;
    }

    .btn-edit:hover {
        background-color: #e0a800;
    }

    .btn-details:hover {
        background-color: #138496;
    }

    .btn-delete:hover {
        background-color: #c82333;
    }

    .card {
        margin: 2rem auto;
        padding: 2rem;
    }
</style>

<div class="card">
    <div class="card-header">
        <h2 class="CentrarColumnas">Información de los paquetes</h2>

        <p>
            <a asp-action="Create" class="btn btn-outline-success">Agregar nuevo paquete</a>
        </p>
    </div>
    <div class="card-body">
        <table class="table table-bordered table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NombrePaquete)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Costo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Prima)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Mensualidad)
                    </th>
                    <th class="CentrarColumnas">
                        Herramientas
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    item.Prima = item.Prima * 100;
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NombrePaquete)
                        </td>
                        <td>
                            $@Html.DisplayFor(modelItem => item.Costo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Prima)%
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Mensualidad) meses
                        </td>
                        <td class="CentrarColumnas">
                            @Html.ActionLink("Editar", "Edit", new {  id=item.ID  }, new {@class="btn btn-warning text-white"}) |
                            @Html.ActionLink("Eliminar", "Delete", new {  id=item.ID  }, new {@class="btn btn-danger text-white"})
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
