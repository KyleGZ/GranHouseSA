@model GranHouseSA.Models.Clientes

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .create-container {
        max-width: 600px;
        margin: 5rem auto;
        padding: 2rem;
        background-color: #ffffff;
        border-radius: 12px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.05);
    }

    h1 {
        text-align: center;
        margin-bottom: 1.5rem;
        color: #0c193b;
    }

    .form-group label {
        font-weight: 600;
    }

    .form-control {
        max-width: 400px;
        border-radius: 8px;
        padding: 0.6rem;
    }

    .btn-primary {
        width: 100%;
        border-radius: 8px;
        padding: 0.6rem;
        font-weight: bold;
        background-color: #0c193b;
        border: none;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #1f2a50;
        }

    .alert {
        font-size: 0.95rem;
    }
</style>

<div class="create-container" >
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">

            <h4 class="CentrarColumnas">Información del cliente</h4>
            <hr />
            <form asp-action="Create" class="form-container">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="TipoCedula" class="control-label"></label>
                    <select asp-for="TipoCedula" class="form-select">
                        <option value="Nacional">Nacional</option>
                        <option value="Extranjera">Extranjera</option>
                    </select>
                    <span asp-validation-for="TipoCedula" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Cedula" class="control-label"></label>
                    <input asp-for="Cedula" class="form-control" id="inputCedula" placeholder="X0XXX0XXX" />
                    <span asp-validation-for="Cedula" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Nombre" class="control-label"></label>
                    <input asp-for="Nombre" class="form-control" id="inputNombre" readonly />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Telefono" class="control-label"></label>
                    <input asp-for="Telefono" class="form-control" placeholder="0000 0000" />
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Direccion" class="control-label"></label>
                    <input asp-for="Direccion" class="form-control" placeholder="Direccion" />
                    <span asp-validation-for="Direccion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" placeholder="example@domain.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <input type="submit" value="Registrar" class="btn btn-primary" />
                </div>

                @if (TempData["ClienteError"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show mt-2" style="font-size:13px; margin:auto" role="alert">
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
                        <strong>@TempData["ClienteError"]</strong>
                    </div>
                }

            </form>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
